# Application Environment
ENVIRONMENT=production
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Domain Configuration
DOMAIN=example.com

# Feature Flags
ENABLE_METRICS=true
METRICS_PORT=9090
FEATURE_MEMORY_ENABLED=true
VISUALIZATION_ENABLED=true

# Performance Settings
MEMORY_LIMIT_MB=768
AUDIO_PROCESSING_THREADS=4
FEATURE_MEMORY_CACHE_SIZE=1000
FEATURE_MEMORY_TTL=86400
VISUALIZATION_QUALITY=medium
PATTERN_RECOGNITION_THRESHOLD=0.75
PATTERN_LEARNING_RATE=0.05

# Error Handling
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=1000

# API Settings
CORS_ALLOWED_ORIGINS=https://example.com,https://api.example.com
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Production-specific Settings
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_MEMORY_PROFILING=false
ENABLE_VERBOSE_ERRORS=false
DISABLE_RATE_LIMITING=false
MOCK_EXTERNAL_SERVICES=false

# Caching
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Security
ENABLE_HELMET=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_RATE_LIMITING=true
ENABLE_BRUTE_FORCE_PROTECTION=true
