# Application Environment
ENVIRONMENT=staging
NODE_ENV=production
PORT=3000
LOG_LEVEL=debug

# Domain Configuration
DOMAIN=staging.example.com

# Feature Flags
ENABLE_METRICS=true
METRICS_PORT=9090
FEATURE_MEMORY_ENABLED=true
VISUALIZATION_ENABLED=true

# Performance Settings
MEMORY_LIMIT_MB=768
AUDIO_PROCESSING_THREADS=2
FEATURE_MEMORY_CACHE_SIZE=750
FEATURE_MEMORY_TTL=43200
VISUALIZATION_QUALITY=medium
PATTERN_RECOGNITION_THRESHOLD=0.7
PATTERN_LEARNING_RATE=0.075

# Error Handling
ERROR_RETRY_ATTEMPTS=4
ERROR_RETRY_DELAY=750

# API Settings
CORS_ALLOWED_ORIGINS=https://staging.example.com,https://api.staging.example.com
API_RATE_LIMIT=200
API_RATE_LIMIT_WINDOW=60000

# Health Check
HEALTH_CHECK_INTERVAL=20000

# Staging-specific Settings
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_MEMORY_PROFILING=true
ENABLE_VERBOSE_ERRORS=true
DISABLE_RATE_LIMITING=false
MOCK_EXTERNAL_SERVICES=false

# Caching
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=1800
CACHE_MAX_SIZE=50

# Security
ENABLE_HELMET=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_RATE_LIMITING=true
ENABLE_BRUTE_FORCE_PROTECTION=true

# Feature Testing
ENABLE_FEATURE_FLAGS=true
ENABLE_A_B_TESTING=true
ENABLE_CANARY_RELEASES=true
